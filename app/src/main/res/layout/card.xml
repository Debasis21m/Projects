<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <!--app:cardCornerRadius="6dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/farm_name"
                android:text="Ramlal's Farm"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/farm_address"
                android:text="2 Room 67 14 Tottenham Court Road London England W1T 1JY"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vStatus"
                android:text="Verification pending"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textColor="#ffb600"/>
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/farm_image"
            android:layout_height="180dp"
            android:largeHeap="true"
            android:supportsRtl="true"
            android:scaleType="centerCrop"
            android:src="@drawable/farm1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_navigation_black_24dp"
                    android:background="#00000000"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start / "
                    android:textSize="18dp"
                    android:textColor="#3765ff"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/farm_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44 KM(s)"
                    android:textSize="18dp"
                    android:textColor="#3765ff"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>